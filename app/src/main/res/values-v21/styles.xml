    <style name="TextTitleBlack">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/common_color_text_300</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textLitteContent">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/common_color_layout_text</item>
