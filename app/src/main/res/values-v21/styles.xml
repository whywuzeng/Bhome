<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!--设置没有Title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Genius style -->
        <item name="gTextViewStyle">@style/Genius.Widget.TextView</item>
        <item name="gButtonStyle">@style/Genius.Widget.Button</item>
        <item name="gFloatActionButtonStyle">@style/Genius.Widget.FloatActionButton</item>
        <item name="gSeekBarStyle">@style/Genius.Widget.SeekBar</item>
        <item name="gCheckBoxStyle">@style/Genius.Widget.CompoundButton.CheckBox</item>
        <item name="gEditTextStyle">@style/Genius.Widget.EditText</item>
        <item name="gLoadingStyle">@style/Genius.Widget.Loading</item>
        <item name="gImageViewStyle">@style/Genius.Widget.ImageView</item>

        <item name="toolbarTitleSize">@dimen/font_18</item>
        <item name="toolbarTitleColor">@color/white_alpha_224</item>
        <item name="toolbarMenuIconColor">@color/white_alpha_224</item>

        <!--背景色  应为主题的是黑色背景-->
        <item name="android:windowBackground">@color/windowsBackground</item>
    </style>

    <!--给主Activity设置的Theme-->
    <style name="MainAppTheme.Base" parent="AppTheme">
        <!--actionbar颜色-->
        <item name="colorPrimary">@color/material_blue_50</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/black</item>
        <!--圈圈，滑动条的颜色-->
        <item name="colorAccent">@color/material_green_A200</item>
        <!--ToolBar高度-->
        <item name="actionBarSize">@dimen/actionBarSize</item>

        <item name="backgroundColor">@color/common_color_parentlayout_bg</item>

        <!--那麼ActionMode就可以覆蓋在toolbar之上-->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/CustomActionMode</item>
        <item name="actionModeBackground">@color/greed_11B57C</item>

        <!--API21 特有的API-->
        <!--去除默认阴影-->
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
        <!--设置底部导航颜色-->
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>


    <!--<item name="actionModeCloseButtonStyle">@style/NoCloseButton</item>-->
    <!--<item name="actionModeBackground">@color/greed_11B57C</item>-->
    <!--<item name="android:actionModeBackground">@color/greed_11B57C</item>-->

    <style name="NoCloseButton" parent="@android:style/Widget.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>

    <!--设置自己的ActionMode-->
    <style name="CustomActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/divide</item>
        <item name="closeItemLayout">@layout/task_add_cab_back</item>
        <item name="height">@dimen/actionBarSize</item>
    </style>

    <!--解决白屏显示问题 设置全屏透明-->
    <style name="Theme.Translucent" parent="MainAppTheme.Base">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--对话框半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--无边框-->
        <item name="android:windowFrame">@null</item>
        <!--模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!--分割线-->
    <style name="DivideLine" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divide_line</item>
    </style>

</resources>
