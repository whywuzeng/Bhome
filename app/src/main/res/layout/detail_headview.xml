<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="14dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="3dp"
    card_view:contentPadding="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="表头:"
            android:textSize="18sp"
            android:drawableLeft="@drawable/box"
            android:textStyle="bold"
            android:textColor="@color/material_black95"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <RelativeLayout style="@style/button_wrapper_style">

            <TextView
                android:id="@+id/tv_jihuakaishi1"
                android:textSize="13sp"
                android:text="订单编号:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_jihuakaishi1"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:text=""
                android:paddingRight="10dp"
                android:id="@+id/detail_danCode"
                android:background="#d5e1ef"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </RelativeLayout>

        <RelativeLayout style="@style/button_wrapper_style">

            <TextView
                android:id="@+id/tv_jihuakaishi2"
                android:textSize="13sp"
                android:text="计划开始日期:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_jihuakaishi2"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:text=""
                android:paddingRight="10dp"
                android:id="@+id/detail_planstartDate"
                android:background="#d5e1ef"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </RelativeLayout>

        <RelativeLayout style="@style/button_wrapper_style">

            <TextView
                android:id="@+id/tv_jihuakaishi3"
                android:textSize="13sp"
                android:text="计划完工日期:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_jihuakaishi3"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:text=""
                android:paddingRight="10dp"
                android:id="@+id/detail_plancloseDate"
                android:background="#d5e1ef"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </RelativeLayout>

        <RelativeLayout style="@style/button_wrapper_style">

            <TextView
                android:id="@+id/tv_jihuakaishi4"
                android:textSize="13sp"
                android:text="单据状态:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_jihuakaishi4"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:text=""
                android:paddingRight="10dp"
                android:id="@+id/detail_danStatus"
                android:background="#d5e1ef"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </RelativeLayout>

        <RelativeLayout style="@style/button_wrapper_style">

            <TextView
                android:id="@+id/tv_jihuakaishi5"
                android:textSize="13sp"
                android:text="制单人:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_jihuakaishi5"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:text=""
                android:paddingRight="10dp"
                android:id="@+id/detail_zhidanpeople"
                android:background="#d5e1ef"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </RelativeLayout>

        <RelativeLayout style="@style/button_wrapper_style">

            <TextView
                android:id="@+id/tv_jihuakaishi6"
                android:textSize="13sp"
                android:text="审核人:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_jihuakaishi6"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:text=""
                android:paddingRight="10dp"
                android:id="@+id/detail_shenhepeople"
                android:background="#d5e1ef"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </RelativeLayout>
    </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>