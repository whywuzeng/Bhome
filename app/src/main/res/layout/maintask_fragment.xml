<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@color/litte_strong_gray"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/litte_gray_rudio_bg"
            android:layout_height="31dp">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:text="搜索"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/litte_gray_box_bg"
        android:layout_height="55dp"
        style="@style/GrayBoxMarrginSize"
        >

        <ImageView
            android:id="@+id/iv_right1_img"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/smartcell_icon_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@+id/iv_right1_img"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:text="上班了还未打卡，请及时打卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/litte_gray_box_bg"
        style="@style/GrayBoxMarrginSize"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="top"
            android:background="@drawable/midlle_grey_box_bg"
            android:layout_width="match_parent"
            android:layout_height="39dp">
            <TextView
                android:textColor="@color/gray6"
                android:textSize="13sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:textStyle="bold"
                android:text="计时"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            >

            <ImageView
                android:id="@+id/iv_right_img"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/smart_cell_icon_coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toRightOf="@+id/iv_right_img"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/gray6"
                android:text="今天已工作,现在休息中"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <View
                android:background="@color/gray7"
                android:layout_marginRight="9dp"
                android:layout_marginLeft="9dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="@color/blue_color"
                android:text="全部同事(0)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/litte_gray_box_bg"
        style="@style/GrayBoxMarrginSize"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="top"
            android:background="@drawable/midlle_grey_box_bg"
            android:layout_width="match_parent"
            android:layout_height="39dp">
            <TextView
                android:textColor="@color/gray6"
                android:textSize="13sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:textStyle="bold"
                android:text="今日待办"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            >

            <LinearLayout
                android:id="@+id/ll_right_layout_bottom"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/tv_right_text_bottom"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/gray6"
                android:text="17:18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_right_text_bottom"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/gray6"
                android:text="到期"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_toRightOf="@+id/ll_right_layout_bottom"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/gray6"
                android:text="你好，感谢你使用MAIS服务."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <View
                android:background="@color/material_blue_grey_700"
                android:layout_marginRight="9dp"
                android:layout_marginLeft="9dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="@color/blue_color"
                android:text="明天及以后的任务(0)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/litte_gray_box_bg"
        style="@style/GrayBoxMarrginSize"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="top"
            android:background="@drawable/midlle_grey_box_bg"
            android:layout_width="match_parent"
            android:layout_height="39dp">
            <TextView
                android:textColor="@color/gray6"
                android:textSize="13sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:textStyle="bold"
                android:text="任务"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            >

            <ImageView
                android:id="@+id/iv_right_img"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/smart_cover_project_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toRightOf="@+id/iv_right_img"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/gray6"
                android:text="新建项目"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_left_img_task"
                android:src="@drawable/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <View
                android:background="@color/gray6"
                android:layout_marginRight="9dp"
                android:layout_marginLeft="9dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_alltask_bottom"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="@color/blue_color"
                android:text="全部任务(0)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>