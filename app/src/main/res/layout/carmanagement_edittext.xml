<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextTitleBlack"
            android:textSize="15sp"
            android:text="车次:"
            />

        <TextView
            style="@style/TextTitleBlack"
            android:textColor="@color/red_color"
            android:textSize="13sp"
            android:text="(必填)"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_domian"
        style="@style/textLitteTitle"
        android:minHeight="30.0dip"
        android:layout_marginLeft="12dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="left|center_vertical"
        android:hint="@string/qingshurucarmanagement"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:background="@null"
        android:maxLength="33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextTitleBlack"
            android:textSize="15sp"
            android:text="货柜数:"
            />

        <TextView
            style="@style/TextTitleBlack"
            android:textColor="@color/red_color"
            android:textSize="13sp"
            android:text="(必填)"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_container"
        style="@style/textLitteTitle"
        android:minHeight="30.0dip"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="left|center_vertical"
        android:hint="@string/qingshurucontainernum"
        android:singleLine="true"
        android:inputType="number"
        android:gravity="center_vertical"
        android:background="@drawable/edittext_bg_layerlist"
        android:maxLength="33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:textSize="15sp"
        style="@style/TextTitleBlack"
        android:text="备注:"
        />

    <EditText
        android:id="@+id/edt_beizhu"
        style="@style/textLitteTitle"
        android:maxHeight="120.0dip"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:gravity="start"
        android:hint="@string/qingshuruduanbeizhu"
        android:lines="5"
        android:maxLines="5"
        android:background="@color/common_color_parentlayout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
