<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Commentlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:visibility="visible">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/task_list_item_icon"
        android:layout_height="@dimen/task_list_item_icon"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_15"
        android:src="@drawable/ic_default_user" />

    <View
        android:id="@+id/timeLineUp"
        android:layout_width="2dp"
        android:layout_height="@dimen/padding_15"
        android:layout_alignLeft="@id/icon"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:background="@color/divide" />

    <View
        android:id="@+id/timeLineDown"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/include"
        android:layout_alignEnd="@+id/timeLineUp"
        android:layout_alignLeft="@id/icon"
        android:layout_alignRight="@+id/timeLineUp"
        android:layout_below="@id/icon"
        android:layout_marginLeft="13dp"
        android:background="@color/divide" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:layout_toRightOf="@+id/icon"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <!--<TextView-->
            <!--android:id="@+id/name"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignLeft="@id/layoutContent"-->
            <!--android:layout_below="@id/layoutContent"-->
            <!--android:text="超级小胖纸"-->
            <!--android:textColor="@color/font_6"-->
            <!--android:textSize="14sp" />-->

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/name"
                android:layout_toRightOf="@id/name"
                android:drawablePadding="5dp"

                android:text="3分钟前"
                android:textColor="@color/font_9"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_15"
            android:padding="8dp"
            android:lineSpacingExtra="3dp"
            android:visibility="gone"
            android:text="1111"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/font_6"
            android:background="@color/litte_gray"
            android:layout_below="@id/title"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_1"
        android:layout_marginTop="0dp" />

</RelativeLayout>
