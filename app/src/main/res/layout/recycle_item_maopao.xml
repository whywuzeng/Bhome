<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/divide_middle_15"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_toRightOf="@id/icon"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    tools:text="这个用户名名字"
                    android:textColor="@color/font_green"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/time"
                    tools:text="25分钟之前"
                    android:layout_marginRight="15dp"
                    android:textSize="13sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <com.system.bhouse.Common.message.GifSpanTextView
                tools:text="去咯去咯去聊"
                android:id="@+id/content"
                android:layout_marginTop="10dp"
                android:background="@drawable/content_pressed_selector"
                android:layout_marginRight="15dp"
                android:lineSpacingExtra="1dp"
                android:lineSpacingMultiplier="1.1"
                android:singleLine="false"
                android:textSize="15sp"
                android:textColor="@color/font_2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.system.bhouse.Common.message.MinSizeImageView
                    android:id="@+id/imageSingle"
                    android:maxHeight="200dp"
                    android:minHeight="80dp"
                    android:minWidth="80dp"
                    android:maxWidth="200dp"
                    android:scaleType="centerCrop"
                    android:longClickable="true"
                    android:layout_marginTop="13dp"
                    android:adjustViewBounds="true"
                    app:microSize="60dp"
                    app:minHeight="150dp"
                    app:minWidth="150dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/imagesLayout0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <include
                        android:id="@+id/image0"
                        layout="@layout/maopao_image" />

                    <include
                        android:id="@+id/image1"
                        layout="@layout/maopao_image" />

                    <include
                        android:id="@+id/image2"
                        layout="@layout/maopao_image" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imagesLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <include
                        android:id="@+id/image3"
                        layout="@layout/maopao_image" />

                    <include
                        android:id="@+id/image4"
                        layout="@layout/maopao_image" />

                    <include
                        android:id="@+id/image5"
                        layout="@layout/maopao_image" />
                </LinearLayout>
            </LinearLayout>


            <View
                style="@style/DivideLine"
                android:layout_marginTop="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                >

                <TextView
                    android:id="@+id/comment"
                    tools:text="2条评论"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:drawableLeft="@drawable/maopao_extra_comment"
                    android:drawablePadding="9dp"
                    android:textSize="14sp"
                    android:textColor="@color/font_9"
                    />

                <TextView
                    android:id="@+id/delete"
                    tools:text="删除"
                    android:layout_width="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_green"
                    android:textSize="14sp"
                    android:gravity="center"

                    />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>