<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="wrap_content">

<LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_marginLeft="10dp"
android:layout_height="wrap_content">

<TextView
    android:layout_marginLeft="1dp"
    android:id="@+id/tv_task_done1"
    android:layout_weight="3"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
  android:textSize="15sp"
    android:textColor="@color/common_color_text_300"
    android:text="@string/comtasktabletoptitleprojectName"/>

<TextView
    android:id="@+id/tv_task_done"
    android:layout_weight="3"
    android:layout_width="0dp"
    android:visibility="gone"
    android:layout_marginLeft="30dp"
    style="@style/ComTaskContentItemRight"
    android:text="30"/>

    <TextView
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_marginLeft="1dp"
        style="@style/ComTaskContentItemTitle"
        android:text=""/>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:paddingLeft="1dp"
        android:visibility="invisible"
        android:src="@drawable/litte_grey_right_arrow"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:foregroundGravity="center_vertical"
        android:layout_height="wrap_content"
        />

</LinearLayout>

<View
style="@style/DivideLine1dp"
android:layerType="software"
android:layout_height="2dp"
android:layout_marginLeft="10dp"
android:layout_marginRight="20dp"
    />

</LinearLayout>