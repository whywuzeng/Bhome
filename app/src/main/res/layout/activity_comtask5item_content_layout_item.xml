<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/mianLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/common_color_line_000001"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_delete_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="1dp"
            android:src="@drawable/comtask_cotent_item"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_wuliao_id"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:padding="1dp"
            android:paddingLeft="6dp"
            android:textSize="12sp"
            style="@style/ComTaskContentItemTitle"
            android:text="物料编码"/>

        <TextView
            android:id="@+id/tv_wuliao"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_marginLeft="13dp"
            style="@style/ComTaskContentItemRight"
            android:text="胶-过塑胶纸"/>

        <ImageView
            android:id="@+id/iv_litte_grey_right_arrow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/litte_grey_right_arrow"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <View
        style="@style/DivideLine1dpGap"
        android:layerType="software"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:paddingLeft="1dp"
            android:src="@drawable/comtask_cotent_item"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_WuliaoUnit_id"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:paddingLeft="6dp"
            android:textSize="12sp"
            android:padding="1dp"
            style="@style/ComTaskContentItemTitle"
            android:text="物料名称"/>

        <TextView
            android:id="@+id/WuliaoUnit"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_marginLeft="13dp"
            style="@style/ComTaskContentItemRight"
            android:text="30"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/litte_grey_right_arrow"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <View
        style="@style/DivideLine1dpGap"
        android:layerType="software"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="1dp"
            android:visibility="invisible"
            android:src="@drawable/comtask_cotent_item"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_count_measure_id"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:padding="1dp"
            android:paddingLeft="6dp"
            android:textSize="12sp"
            style="@style/ComTaskContentItemTitle"
            android:text="规格型号"/>

        <TextView
            android:id="@+id/tv_count_measure"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="12sp"
            android:layout_marginLeft="13dp"
            style="@style/ComTaskContentItemRight"
            android:text="30"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/litte_grey_right_arrow"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


    <View
        style="@style/DivideLine1dpGap"
        android:layerType="software"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="1dp"
            android:visibility="invisible"
            android:src="@drawable/comtask_cotent_item"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_count_amount_id"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:padding="1dp"
            android:paddingLeft="6dp"
            android:textSize="12sp"
            style="@style/ComTaskContentItemTitle"
            android:text="单位"/>

        <TextView
            android:id="@+id/tv_count_amount"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="12sp"
            android:layout_marginLeft="13dp"
            style="@style/ComTaskContentItemRight"
            android:text="30"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/litte_grey_right_arrow"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


    <View
        style="@style/DivideLine1dpGap"
        android:layerType="software"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="1dp"
            android:visibility="invisible"
            android:src="@drawable/comtask_cotent_item"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_count_id"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:padding="1dp"
            android:paddingLeft="6dp"
            android:textSize="12sp"
            style="@style/ComTaskContentItemTitle"
            android:text="需求数量"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="12sp"
            android:layout_marginLeft="13dp"
            style="@style/ComTaskContentItemRight"
            android:text="30"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/litte_grey_right_arrow"
            android:paddingTop="8dp"
            android:visibility="invisible"
            android:paddingBottom="8dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <View
        style="@style/DivideLine1dp"
        android:layerType="software"
        android:layout_height="2dp"
        />



</LinearLayout>